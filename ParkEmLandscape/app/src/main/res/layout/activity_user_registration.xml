<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.tf_staff.parkemlandscape.CommonRegistrationActivity">

    <EditText
        android:id="@+id/user_registration_name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:ems="20"
        android:hint="NAME"
        android:gravity="center"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/user_registration_phone_number_editText"
        android:layout_alignStart="@+id/user_registration_phone_number_editText" />

    <EditText
        android:id="@+id/user_registration_username_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="20"
        android:hint="USERNAME"
        android:gravity="center"
        android:inputType="textPersonName"
        android:layout_below="@+id/user_registration_name_editText"
        android:layout_alignEnd="@+id/user_registration_name_editText"
        android:layout_alignStart="@+id/user_registration_phone_number_editText" />

    <EditText
        android:id="@+id/user_registration_password_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:ems="20"
        android:hint="PASSWORD"
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_below="@+id/user_registration_username_editText"
        android:layout_alignEnd="@+id/user_registration_username_editText"
        android:layout_alignStart="@+id/user_registration_phone_number_editText" />

    <EditText
        android:id="@+id/user_registration_email_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:ems="20"
        android:hint="EMAIL ID"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/user_registration_password_editText"
        android:layout_alignEnd="@+id/user_registration_password_editText"
        android:layout_alignStart="@+id/user_registration_phone_number_editText" />

    <EditText
        android:id="@+id/user_registration_phone_number_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="PHONE NUMBER"
        android:gravity="center"
        android:inputType="phone"
        android:layout_below="@+id/user_registration_email_editText"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_registration_phone_number_editText"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/user_registration_proceed_TexttView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="PROCEED"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/user_registration_reset_TexttView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="RESET"
                    android:textSize="25dp" />

            </LinearLayout>
        </TableRow>

    </TableLayout>

</RelativeLayout>
